<div class="likes_text">
  <div class="back-icon">
    <%= link_to programminglogs_path do %>
    <i class="fas fa-arrow-left"></i>
    <% end %>
  </div> 
  <div class="likes_rank">
    <i class="fas fa-heart"></i> good ranking
  </div>
  <div class="texts">
    <div class="text">
      <% @all_ranks.each.with_index(1) do |prolog, i|%>
        <div class="textonly">
          <%= link_to(programminglog_path(prolog.id), class: 'list-content') do %>
          <span class="ranking">第<%= i %>位</span>
            <div class="text__left">
              <div class="text__image" style="background-image: url(<%= prolog.image %>);"></div>
            </div>
            <div class="text__right">
              <div class="text__title">
                <%= link_to prolog.title, programminglog_path(prolog.id), class: "content__right__top--title" %>
              </div>
              <div class="text__bottom">
                <div class="text__time">
                  <%= prolog.created_at.strftime("%Y年%m月%d日 %H時%M分") %>
                </div>
                <div class="user__name">
                  <img src=<%= prolog.user.image %> class = "icon_image">
                  <div class="content__right__bottom--username">
                    <%= link_to prolog.user.name, user_path(prolog.user), class: "content__right__bottom--userName--btn" %>
                  </div>
                </div>
                <% prolog.tag_list.each do |tag| %>
                  <span style="background-color: #EEEEEE; color: #666666; border-radius: 5px; padding: 5px"><%= tag %></span>
                <% end %>
                <div class="good">
                <i class="fas fa-heart"></i>
                <%= prolog.likes_count %>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div>