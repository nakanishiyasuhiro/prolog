<% if user_signed_in? %>

  <% unless programminglog.like_user(current_user.id).blank? %>
    <%= link_to programminglog_like_path(programminglog_id: programminglog.id ,id: programminglog.likes[0].id), method: :delete, remote: true do %>
      <div class="vertical_like">
        いいね！<i class="fas fa-heart"></i>
        <span class="red-text">
          <%= programminglog.likes_count %>
        </span>
      </div>
    <% end %>
  <% else %>
    <%= link_to programminglog_likes_path(programminglog.id), method: :post, remote: true do %>
      <div class="vertical_like">
        いいね！<i class="far fa-heart"></i>
        <span class="grey-text text-darken-2">
          <%= programminglog.likes_count %>
        </span>
      </div>
    <% end %>
  <% end %>

<% else %>

  <% if programminglog.likes_count > 0 %>
    <div class="vertical_like">
      いいね！<i class="fas fa-heart"></i>
      <span class="red-text">
        <%= programminglog.likes_count %>
      </span>
    </div>
  <% else %>
    <div class="vertical_like">
      いいね！<i class="far fa-heart"></i>
      <span class="grey-text text-darken-2">
        <%= programminglog.likes_count %>
      </span>
    </div>
  <% end %>

<% end %>