<header>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
      <% if user_signed_in? %>
        <a class="navbar-brand left" href="/">Prolog</a>
      <% end %>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>

      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav mr-auto">
          <li class="nav-item">
            <a class="nav-link left" href="/programminglogs/new">新規投稿</a>
          </li>
        </ul>
      
        <div class="search">
          <div class="search-box">
            <%= form_with(url: search_programminglogs_path, local: true, method: :get, class: "search-form") do |form| %>
              <%= form.text_field :keyword, placeholder: "投稿を検索する", class: "search-input" %>
              <%= form.submit "検索", class: "search-btn" %>
            <% end %>
          </div>
        </div>
      </div>
    </nav>
  </header>
<div class="index-page">
  <div class="index-page__main">
  
    <div class="prolog-toppage">
      <p>Prolog一覧</p>
    </div>

    <div class="texts">
      <div class="text">
        <% @programminglogs.each do |prolog|%>
          <div class="textonly">
            <div class="text__left">
              <div class="text__image" style="background-image: url(<%= prolog.image %>);"></div>
            </div>
            <div class="text__right">
              <div class="text__title">
                <%= link_to prolog.title, programminglog_path(prolog.id), class: "content__right__top--title" %>
              </div>
              <div class="text__bottom">
                <div class="content__right__bottom--username">
                  <%= link_to prolog.user.name, user_path(prolog.user), class: "content__right__bottom--userName--btn" %>
                </div>
                <div class="text__time">
                  <%= prolog.created_at.strftime("%Y年%m月%d日 %H時%M分") %>
                </div>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>