<header>
  <nav class="main_nav">
    <div class="nav">
      <ul class="nav-nav">

        <li class="nav-item choice">
          <%= link_to new_programminglog_path, class: "nav_new" do %>
            <i class="far fa-file"></i> 新規投稿
          <% end %>
        </li>

        <li class="nav_user choice">
          <%= link_to users_path, class: "nav-all" do %>
            <i class="fas fa-users"></i> ユーザー一覧
          <% end %>
        </li>

        <li class="nav_good choice">
          <%= link_to programminglog_likes_path(@programminglogs), class: "nav-user" do %>
            <i class="fas fa-heart"></i> いいね！ランキング
          <% end %>
        </li>

        <li class="user_nav choice">
        <% if user_signed_in? %>
          <%= link_to destroy_user_session_path, method: :delete do %>
          <i class="fas fa-sign-out-alt"></i>ログアウト
          <% end %>
        <% end %>

      </ul>
    
      <div class="search">
        <div class="search-box">
          <%= form_with(url: search_programminglogs_path, local: true, method: :get, class: "search-form") do |form| %>
            <%= form.text_field :keyword, placeholder: "投稿を検索する", class: "search-input" %>
            <%= form.submit "検索", class: "search-btn" %>
          <% end %>
        </div>
      </div>

    </div>
  </nav>
</header>

<div class="index-page">
  <div class="index-page__main">

    <div class="prolog-toppage">
      <p>Prolog</p>
    </div>

    <div class="texts">
      <div class="text">
        <% @programminglogs.each do |prolog|%>
          <%= render partial: "prolog", locals: { prolog: prolog } %>
        <% end %>
      </div>
    </div>
  </div>
</div>

<footer>
  <p>
    &Copy Prolog 2020.
  </p>
</footer>