<header>
  <nav class="navbar navbar-expand-lg navbar-light bg-light">
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav mr-auto">
        <li class="nav-item">
          <a class="nav-link left" href="/programminglogs/new"><i class="far fa-file"></i> 新規投稿</a>
        </li>
        </li>
        <li class="nav-user">
          <a class="nav-link left" href="/users"><i class="fas fa-users"></i> ユーザー一覧</a>
        </li>
        <% if user_signed_in? %>
        <li class="user_nav">
          <%= link_to destroy_user_session_path, method: :delete do %>
          <i class="fas fa-sign-out-alt"></i>ログアウト
          <% end %>
        <% end %>
      </ul>
    
      <div class="search">
        <div class="search-box">
          <%= form_with(url: search_programminglogs_path, local: true, method: :get, class: "search-form") do |form| %>
            <%= form.text_field :keyword, placeholder: "投稿を検索する", class: "search-input" %>
            <%= form.submit "検索", class: "search-btn" %>
          <% end %>
        </div>
      </div>
    </div>
  </nav>
</header>

<div class="index-page">
  <div class="index-page__main">

    <div class="prolog-toppage">
      <p>Prolog一覧</p>
    </div>

    <div class="texts">
      <div class="text">
        <% @programminglogs.each do |prolog|%>
          <%= render partial: "prolog", locals: { prolog: prolog } %>
        <% end %>
      </div>
    </div>
  </div>
</div>