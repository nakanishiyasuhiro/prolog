<% if user_signed_in? %>
  <% if programminglog.like_user(current_user.id) %>
    <%= button_to programminglog_like_path(like, programminglog_id: programminglog.id), method: :delete, id: "like-button", remote: true do %>
      <%= image_tag("icon_red_heart.svg") %>
      <span>
        <%= programminglog.like_count %>
      </span>
    <% end %>
  <% else %>
    <%= button_to programminglog_likes_path(programminglog), id: "like-button", remote: true do %>
      <%= image_tag("icon_heart.svg") %>
      <span>
        <%= programminglog.like_count %>
      </span>
    <% end %>
  <% end %>
<% else %>
  <% = image_tag("icon_heart.svg") %>
    <span>
      <%= programminglog.like_count %>
    </span>
<% end %>